<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bootstrap.routing.loader.class">AlphaLemon\BootstrapBundle\Core\Loader\RoutingLoader</parameter>
        <parameter key="bootstrap.post_actions.class">AlphaLemon\BootstrapBundle\Core\Listener\ExecutePostActionsListener</parameter>
    </parameters>

    <services>
        <service id="acme.routing_loader" class="%bootstrap.routing.loader.class%">
            <argument type="service" id="file_locator" />
            <tag name="routing.loader" />
        </service>
        
        <service id="bootstrap.post_actions" class="%bootstrap.post_actions.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="99999" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
